<!DOCTYPE html>
<html>
<head>
  <title>ShopDemo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

	<div id="main_content">
				<form action="/checkout" method="get">
					<!--
						<input type="hidden" name="original_link" value=<%= request.original_url %>>
					-->
					<input type="hidden" name="trans" value=<%= params[:trans] %>>
					<input type="hidden" name="user" value=<%= params[:user] %>>

					Product Name: <%= text_field_tag 'product', 'lipstick' %> <br/>
					Amount: <%= text_field_tag 'amount', '100' %> <br/>

					<button>Click to Checkout and Apply IPSYPLOOS Promotion</button></form>
		<%= yield %>		
	</div>

</body>
</html>
